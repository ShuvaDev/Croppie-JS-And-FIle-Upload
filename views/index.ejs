<!doctype html>
<html lang="en">

<head>
    <title>Croppie JS</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">
</head>

<body>
    <div class="container text-center">
        <h1 class="display-4">Crop Image Using Croppie JS</h1>

        <div class="profile-pics">
            <img 
                src="/uploads/default.png" 
                alt="ProfilePics"
                class="img-fluid img-thumbnail"
                id="profilePics"
            >
            <form action="/uploads/profilePics" method="POST" class="my-2" id="profilePicsForm">
                <input type="file" name="profilePics" id="profilePicsFile" accept="image/*">
            </form>
        </div>
    </div>

    <!-- Modal For Crop Picture and Upload -->
    <div class="modal fade" id="crop-modal" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Resize Your Image</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="cropped-image"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-cropping"
                        data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="upload-image">Upload</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.js"></script>
    <script src="/scripts/profilePicsUpload.js"></script>
</body>

</html>